<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bodor.com.socialbutton.MainActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.shaishavgandhi.loginbuttons.GooglePlusButton
            android:text="nihao"
            app:roundedCorner = "true"
            app:iconSize = "45dp"
            android:shadowRadius="5dp"
            app:radius = "30dp"
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.shaishavgandhi.loginbuttons.FacebookButton

            android:id="@+id/facebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.shaishavgandhi.loginbuttons.TwitterButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.shaishavgandhi.loginbuttons.LinkedInButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.shaishavgandhi.loginbuttons.BaseButton
            android:text="hello"
            android:background="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>
